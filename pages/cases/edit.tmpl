<_info>
	<title>Редактор кейса</title>
	<template>default</template>
	
	<datajson>
		{
			"dataset" : {
				"name":"",
				"description":"",
				"tags":[],
				"content":"",
				"image":"",
				"hidden":false
			},

			"action_update": {
				"type":"handler",
				"handler":"ds-update",
				"data":{
					"dataset":"$dataset"
				}
			},
			
			"action_create": [
				{
					"type":"handler",
					"handler":"ds-update",
					"data":{
						"dataset":"$dataset",
						"type":"case"
					}
				},
				{
					"type":"href",
					"href":"?id={#}"
				}
			]
		}
	</datajson>

	<dataphp>
		GLOBAL $DS;

		$res = Array();
		if ($_GET['id']) {$res['dataset'] = $DS->get($_GET['id']);};
		$res['tags'] = $DS->list("portfolio_tag");

		return $res;
	</dataphp>

</_info>

<_template>
	<div class="col-md-12"><h4 class="c-grey-900 mB-20">{{PAGE.title}}</h4></div>
	<div class="col-md-3">
		<div class="bgc-white bd bdrs-3 p-20 mB-20">
			<h5>Изображение</h5>
			<form-file-select label="Превью" type="image" :multiple="false" v-model="dataset.image"></form-file-select>
			<label>Теги</label>
			<form-checkbox v-for="tag in tags" :label="tag.name" v-model="dataset.tags[tag.id]"></form-checkbox>
		</div>
	</div>
	<div class="col-md-9">
		<div class="bgc-white bd bdrs-3 p-20 mB-20">
			<h5>Информация</h5>
			<form-input label="Название" v-model="dataset.name"></form-input>
			<form-textarea label="Описание" v-model="dataset.description"></form-textarea>
			<form-tinymce label="Контент" v-model="dataset.content"></form-tinymce>
			<form-checkbox label="Скрыть на сайте" v-model="dataset.hidden"></form-checkbox>
			<action-btn v-if="dataset.id" label="Сохранить" :action="action_update"></action-btn>
			<action-btn v-else label="Создать" :action="action_create"></action-btn>
		</div>
	</div>

</_template>