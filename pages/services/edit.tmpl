<_info>
	<title>Редактор услуги</title>
	<template>default</template>
	
	<datajson>
		{
			"dataset" : {
				"name":"",
				"category":"",
				"is_hot":false,
				"content":"",
				"image":"",
				"price":"0"
			},

			"action_update": {
				"type":"handler",
				"handler":"ds-update",
				"data":{
					"dataset":"$dataset"
				}
			},
			
			"action_create": [
				{
					"type":"handler",
					"handler":"ds-update",
					"data":{
						"dataset":"$dataset",
						"type":"service"
					}
				},
				{
					"type":"href",
					"href":"?id={#}"
				}
			]
		}
	</datajson>

	<dataphp>
		GLOBAL $DS;

		$res = Array();
		if ($_GET['id']) {$res['dataset'] = $DS->get($_GET['id']);};
		$res['cats'] = $DS->list("service_category");

		return $res;
	</dataphp>

</_info>

<_template>
	<div class="col-md-12"><h4 class="c-grey-900 mB-20">{{PAGE.title}}</h4></div>
	<div class="col-md-3">
		<div class="bgc-white bd bdrs-3 p-20 mB-20">
			<h5>Изображение</h5>
			<form-file-select label="Превью" type="image" :multiple="false" v-model="dataset.image"></form-file-select>
			<label>Категория</label>
			<div class="form-group form-group">
				<select v-model="dataset.category" class="form-control">
					<option v-for="cat in cats" :value="cat.id">{{cat.name}}</option>
				</select>
			</div>
		</div>
	</div>
	<div class="col-md-9">
		<div class="bgc-white bd bdrs-3 p-20 mB-20">
			<h5>Информация</h5>
			<form-input label="Название" v-model="dataset.name"></form-input>
			<form-input label="Стоимость" v-model="dataset.price"></form-input>
			<form-tinymce label="Контент" v-model="dataset.content"></form-tinymce>
			<form-checkbox label="HOT!" v-model="dataset.is_hot"></form-checkbox>

			<action-btn v-if="dataset.id" label="Сохранить" :action="action_update"></action-btn>
			<action-btn v-else label="Создать" :action="action_create"></action-btn>
		</div>
	</div>

</_template>